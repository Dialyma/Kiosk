<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/activity_background">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            style="@style/selection_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/customer_account"
            android:drawableLeft="@drawable/ic_customer_accounts"
            android:onClick="moveToCustomerAccountScreen"
            android:id="@+id/customer_account"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical|center_horizontal" />
        <Button
            style="@style/selection_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sponsors"
            android:onClick="moveToSponsorsScreen"
            android:id="@+id/sponsor"
            android:drawableLeft="@drawable/ic_sponsors"
            android:layout_gravity="center_vertical|center_horizontal"
            />
    </LinearLayout>


</RelativeLayout>