<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_background">
    <LinearLayout
            android:id="@+id/left_pane"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="match_parent"
            android:baselineAligned="false">
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="48.9"
                      android:orientation="vertical"
                      android:layout_marginRight="20dp"
                      android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_summary_height"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:background="@color/order_summary_background">
                <TextView
                        android:id="@+id/sales_channel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:maxWidth="200dp"
                        style="@style/standard_black_text"
                        android:text="Over the counter Really Long"/>
                <TextView
                        android:id="@+id/sales_channel_account_separator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/sales_channel"
                        style="@style/standard_black_text"
                        android:text=" | "/>
                <TextView
                        android:id="@+id/customer_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/sales_channel_account_separator"
                        android:ellipsize="end"
                        android:singleLine="true"
                        style="@style/standard_black_text"
                        android:text="John Doe Really Really Long"/>
            </RelativeLayout>

            <com.tonicartos.widget.stickygridheaders.StickyGridHeadersGridView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/product_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:columnWidth="120dip"
                    android:numColumns="3"
                    android:layout_marginTop="10dp"
                    tools:context=".ItemListFragment"/>

        </LinearLayout>

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"/>

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="50.9"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_marginLeft="10dp">
            <TextView
                    android:id="@+id/choose_promotion_label"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applied_promotions_label"
                    style="@style/standard_black_text"
                    android:layout_gravity="center_horizontal"/>

            <GridView
                    android:id="@+id/right_grid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/promotions_grid_height"
                    android:gravity="center"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:columnWidth="@dimen/promotions_grid_column_width"/>

            <RelativeLayout
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                <TextView
                        android:id="@+id/total_price_label"
                        android:text="@string/total_price_label"
                        style="@style/total_price_text"
                        android:paddingLeft="@dimen/price_label_space"/>

                <TextView
                        android:id="@+id/total_price"
                        android:layout_toRightOf="@+id/total_price_label"
                        android:text="22000"
                        style="@style/total_price_text"
                        android:paddingLeft="@dimen/price_label_space"
                        android:paddingRight="@dimen/price_label_space"/>

                <TextView
                        android:id="@+id/total_price_currency"
                        android:layout_toRightOf="@+id/total_price"
                        android:text="HTG"
                        style="@style/total_price_text"
                        android:paddingRight="@dimen/price_label_space"/>

                <TextView
                        android:id="@+id/discounted_price_label"
                        android:layout_below="@+id/total_price_label"
                        android:layout_marginTop="5dp"
                        android:text="@string/discounted_price_label"
                        style="@style/discounted_price_text"
                        android:paddingLeft="@dimen/price_label_space"/>

                <TextView
                        android:id="@+id/discounted_price"
                        android:layout_below="@+id/total_price_label"
                        android:layout_toRightOf="@+id/discounted_price_label"
                        android:layout_marginTop="5dp"
                        android:text="18000"
                        style="@style/discounted_price_text"
                        android:padding="@dimen/price_label_space"/>

                <TextView
                        android:id="@+id/discounted_price_currency"
                        android:layout_toRightOf="@+id/discounted_price"
                        android:layout_below="@+id/total_price_label"
                        android:layout_marginTop="5dp"
                        android:text="HTG"
                        style="@style/discounted_price_text"
                        android:paddingRight="@dimen/price_label_space"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_sale_bottom_pane"/>

</RelativeLayout>