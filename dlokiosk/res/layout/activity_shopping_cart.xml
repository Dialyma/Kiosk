<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_background">
    <LinearLayout
            android:id="@+id/left_pane"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="match_parent"
            android:baselineAligned="false">
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="49.8"
                      android:orientation="vertical"
                      android:layout_marginRight="20dp"
                      android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/order_summary_height"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:background="@color/order_summary_background">
                <TextView
                        android:id="@+id/order_for_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/all_caps_text"
                        android:text="@string/order_for_label"/>
                <TextView
                        android:id="@+id/sales_channel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/order_for_label"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:maxWidth="200dp"
                        style="@style/all_caps_text"
                        android:text="Over the counter Really Long"/>
                <TextView
                        android:id="@+id/sales_channel_account_separator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/sales_channel"
                        style="@style/all_caps_text"
                        android:text=" | "/>
                <TextView
                        android:id="@+id/customer_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/sales_channel_account_separator"
                        style="@style/all_caps_text"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="John Doe Really Really Long"/>
            </RelativeLayout>

            <com.tonicartos.widget.stickygridheaders.StickyGridHeadersGridView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/product_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:columnWidth="120dip"
                    android:numColumns="3"
                    android:layout_marginTop="10dp"
                    tools:context=".ItemListFragment"/>

        </LinearLayout>

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"/>

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="49.8"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_marginLeft="20dp">
            <TextView
                    android:id="@+id/choose_promotion_label"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_promotion_label"
                    android:layout_gravity="center_horizontal"
                    style="@style/all_caps_text"/>

            <GridView
                    android:id="@+id/right_grid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/promotions_grid_height"
                    android:gravity="center"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:columnWidth="@dimen/promotions_grid_column_width"/>

            <LinearLayout
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                <TextView
                        android:text="@string/total_price_label"
                        android:paddingTop="@dimen/price_label_space"
                        android:paddingBottom="@dimen/price_label_space"
                        android:paddingLeft="@dimen/price_label_space"
                        style="@style/price_text"/>

                <TextView
                        android:id="@+id/total_price"
                        android:text="220"
                        android:padding="@dimen/price_label_space"
                        style="@style/price_text"/>

                <TextView
                        android:id="@+id/total_price_currency"
                        android:text="HTG"
                        android:paddingTop="@dimen/price_label_space"
                        android:paddingRight="@dimen/price_label_space"
                        android:paddingBottom="@dimen/price_label_space"
                        style="@style/price_text"/>

                <TextView
                        android:text="@string/discounted_price_label"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="@dimen/price_label_space"
                        android:paddingBottom="@dimen/price_label_space"
                        android:paddingLeft="@dimen/price_label_space"
                        style="@style/price_text"/>

                <TextView
                        android:id="@+id/discounted_price"
                        android:text="180"
                        android:padding="@dimen/price_label_space"
                        style="@style/price_text"/>

                <TextView
                        android:id="@+id/discounted_price_currency"
                        android:text="HTG"
                        android:paddingTop="@dimen/price_label_space"
                        android:paddingRight="@dimen/price_label_space"
                        android:paddingBottom="@dimen/price_label_space"
                        style="@style/price_text"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/bottom_pane"
            android:layout_alignParentBottom="true"
            style="@style/bottom_navigation_pane"
            android:gravity="center">

        <ImageButton
                android:id="@+id/cancel_button"
                android:layout_alignParentLeft="true"
                android:src="@drawable/cancel_button"
                style="@style/navigation_button"
                android:onClick="onCancel"/>

        <ImageButton
                android:id="@+id/continue_button"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="50sp"
                android:enabled="false"
                android:src="@drawable/next_button"
                style="@style/navigation_button"
                android:onClick="onContinue"/>

        <ImageButton
                android:id="@+id/back_button"
                android:layout_toLeftOf="@id/continue_button"
                android:src="@drawable/back_button"
                style="@style/navigation_button"
                android:onClick="onBack"/>

    </RelativeLayout>

</RelativeLayout>