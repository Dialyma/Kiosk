<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_background">
    <LinearLayout
            android:id="@+id/top_pane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:background="@color/blue_background"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/search_customer"
                    style="@style/edit_text"
                    android:text="@string/search_customer_text"/>
            <Button
                    android:layout_alignParentRight="true"
                    style="@style/toggle_button_style"
                    android:text="@string/all_customers_text"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/list_pane"
            android:layout_below="@id/top_pane"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="match_parent"
            android:baselineAligned="false">
        <ListView
                android:id="@+id/sales_channel_list"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:dividerHeight="@dimen/list_divider_height"
                android:divider="@color/list_divider_blue"
                android:background="@color/blue_background"/>
        <FrameLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_divider_height"
                    android:src="@color/list_divider_gray"/>

            <ListView
                    android:id="@+id/customer_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerHeight="@dimen/list_divider_height"
                    android:divider="@color/list_divider_gray"/>

        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/bottom_pane"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9F9">
        <Button
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Back"/>

        <Button
                android:layout_toRightOf="@id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"/>

        <Button
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"/>
    </RelativeLayout>

</RelativeLayout>