<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:windowSoftInputMode="stateHidden|adjustPan"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:padding="16dp">
        <TextView
            style="@style/table_header"
            android:layout_height="wrap_content"
            android:text="@string/flow_header_site"
            android:layout_width="250dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/flow_channel" />

        <TextView
            style="@style/table_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flow_header_value"
            android:id="@+id/flow_value"
            android:layout_weight="1"/>

        <TextView
            style="@style/table_header"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/flow_header_unit"
            android:id="@+id/textView2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_pane"
        android:layout_width="fill_parent"
        android:weightSum="100"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_below="@+id/header"
        android:layout_above="@+id/bottom_pane"
        android:baselineAligned="false">
        <ListView
            android:id="@+id/flow_meter_list"
            android:layout_width="fill_parent"
            android:descendantFocusability="beforeDescendants"
            android:layout_weight="20"
            android:layout_height="wrap_content"
        />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom_pane"
        android:layout_alignParentBottom="true"
        style="@style/bottom_navigation_pane"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_alignParentLeft="true"
            android:src="@drawable/cancel_button"
            style="@style/navigation_button"
            android:onClick="cancelClick"/>

        <Button
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_button"
            android:id="@+id/save_button"
            android:layout_centerVertical="true"
            style="@style/submit_button"
            android:onClick="onSaveReadings"/>

        <ImageButton
            android:id="@+id/back_button"
            android:layout_toLeftOf="@id/save_button"
            android:src="@drawable/back_button"
            style="@style/navigation_button"
            android:onClick="onBack"/>

    </RelativeLayout>
</RelativeLayout>