<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="horizontal_rule">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#ccc</item>
    </style>

    <style name="measurement_heading">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="measurement_location">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="home_screen_button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="right_grid">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:columnWidth">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
        <item name="android:numColumns">2</item>
        <item name="android:verticalSpacing">20dp</item>
        <item name="android:horizontalSpacing">20dp</item>
        <item name="android:background">@drawable/gray_box</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <style name="left_grid">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:columnWidth">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
        <item name="android:numColumns">2</item>
        <item name="android:verticalSpacing">20dp</item>
        <item name="android:horizontalSpacing">20dp</item>
        <item name="android:background">@drawable/gray_box</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <style name="list_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="customer_account_list_item">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">50</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="product_list_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/product_row_height</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="normal_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="all_caps_text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="product_list_add_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:background">@drawable/add_product_to_cart_button</item>
    </style>

    <style name="selected_left_pane_list_item" parent="list_item">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="selected_customer_account_list_item" parent="list_item">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="btnStyleOrange">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_orange</item>
    </style>


    <style name="bottom_navigation_pane">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:background">@color/bottom_navigation_pane_background</item>
    </style>

    <style name="navigation_button" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="remove_button" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@drawable/cancel_button</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="applied_promotion_indicator">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@drawable/green_checkmark</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="price_text" parent="all_caps_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/product_grid_header</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>